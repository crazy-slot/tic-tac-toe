{
  "name": "boilerplate-next-js",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint && next export",
    "start": "next start",
    "lint": "next lint",
    "stylelint": "stylelint **/styles/*.css",
    "compile": "tsc",
    "test": "jest --watch",
    "test:coverage": "jest --coverage --maxWorkers=50% --silent --watchAll=false --reporters=default --coverageReporters=cobertura --coverageReporters=text-summary --coverageReporters=json-summary --coverageReporters=lcov",
    "check-unused-exports": "ts-unused-exports tsconfig.json --excludePathsFromReport=pages --ignoreTestFiles",
    "commit": "cz",
    "release": "standard-version",
    "prepare": "next telemetry disable && husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.3",
    "next": "12.1.6",
    "next-seo": "^5.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.2",
    "ts-unused-exports": "^8.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.6",
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.3",
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "autoprefixer": "^10.4.7",
    "commitizen": "^4.2.4",
    "eslint": "8.18.0",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "lint-staged": "^13.0.2",
    "node-mocks-http": "^1.11.0",
    "plop": "^3.1.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "standard-version": "^9.5.0",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "tailwindcss": "^3.1.4",
    "ts-jest": "^28.0.5",
    "typescript": "4.7.4",
    "yarn-deduplicate": "^5.0.0"
  },
  "resolutions": {
    "minimist": "^1.2.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crazy-slot/boilerplate-next-js.git"
  },
  "author": "Crazy Slot",
  "bugs": {
    "url": "https://github.com/crazy-slot/boilerplate-next-js/issues"
  },
  "homepage": "https://github.com/crazy-slot/boilerplate-next-js/blob/main/README.md",
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}
